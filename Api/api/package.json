{
  "name": "ezbar-api",
  "version": "2.0.0",
  "type": "module",
  "description": "API Node.js para EZBar - Production Ready",
  "main": "server.js",
  "scripts": {
    "dev": "cross-env NODE_ENV=development npx nodemon --max-old-space-size=4096 server.js",
    "start": "cross-env NODE_ENV=production node --max-old-space-size=4096 server.js",
    "start:dev": "cross-env NODE_ENV=development node --max-old-space-size=4096 server.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.{js,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,json,md}\"",
    "fix-schema": "node final_fix_schema.cjs",
    "force-fix": "node force_fix_schema.js"
  },
  "dependencies": {
    "axios": "^1.13.2",
    "bcryptjs": "^3.0.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.22.1",
    "express-rate-limit": "^7.5.0",
    "helmet": "^8.0.0",
    "jsonwebtoken": "^9.0.3",
    "mysql2": "^3.15.3",
    "node-cache": "^5.1.2",
    "winston": "^3.19.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "cross-env": "^10.1.0",
    "eslint": "^9.18.0",
    "nodemon": "^3.1.11",
    "node-forge": "^1.3.1",
    "prettier": "^3.4.2"
  }
}